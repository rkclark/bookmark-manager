<!DOCTYPE html>
<html>
  <head>
    <title>Bookmark Manager</title>
  </head>

  <body>
    <form class="" action="/sessions/" method="post">
      <input type='hidden' name='_method' value='delete'>
      <button type="submit" name="sign_out" id="sign_out">Sign Out</button>
    </form>
    <% if current_user %>
      Welcome, <%= current_user.email %>
    <% end %>
    <% if flash[:error] %>
      <% flash[:error].each do |e| %>
        <p><%= e + "." %></p>
      <% end %>
    <% end %>
    <% if flash[:notice] %>
      <div id='notice'>
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
